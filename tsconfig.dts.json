{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist/esm",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
